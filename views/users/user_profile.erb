
<div class="container">
  <div class="container-fluid bg-1 text-center">
    <h3 class="margin"><%= @user.first_name%></h3>
    <% if @profile.gender == "male" %>
    <img src="http://www.iconsfind.com/wp-content/uploads/2015/08/20150831_55e46b18e2a80.png" class="img-responsive img-circle margin" style="display:inline" alt="Bird" width="350" height="350">

    <% elsif @profile.gender == "neutral"%>
    <img src="https://thesocietypages.org/socimages/files/2009/05/vimeo.jpg" class="img-responsive img-circle margin" style="display:inline" alt="Bird" width="350" height="350">

    <% else %>
    <img src="https://cdn1.iconfinder.com/data/icons/user-pictures/100/female1-512.png" class="img-responsive img-circle margin" style="display:inline" alt="Bird" width="350" height="350">

    <% end %>

    <h3><%= @profile.bio%></h3>
  </div>
</div>


<div class="row">

  <div class="container-fluid bg-2">
      <div class="col s8">
      <button type="button"
        class="btn btn-info btn-lg"
  style="margin-left: 10px; color:#FF0000; width: 50%">
      <span class="glyphicon glyphicon-user">  <%= @user.first_name %></span></button><br><br>
        <button type="button"
        class="btn btn-info btn-lg"
  style="margin-left: 10px; color:#FF0000; width: 50%">
      <span class="glyphicon glyphicon-envelope">  <%= @user.email %></span></button><br><br>
      <button type="button"
        class="btn btn-info btn-lg"
  style="margin-left: 10px; color:#FF0000; width: 50%">
      <span class=" glyphicon glyphicon-calendar">  <%= @profile.birthday %></span></button><br><br>
        <button type="button"
        class="btn btn-info btn-lg"
  style="margin-left: 10px; color:#FF0000; width: 50%">
      <span class="glyphicon glyphicon-map-marker"> SEATTLE,<%= @profile.zip %></span></button>
    </div>
    <div class="col s4" style="float: right;">

      <%@user.meetups.each do |meetup| %>
      <div class="chip" style="float: right;">
        <img src="https://cdn-images-1.medium.com/max/1600/1*EK8I8k19h9V04NnyO59C_A.png" alt="Contact Person">
        <%= meetup.name %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>
